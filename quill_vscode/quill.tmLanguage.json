{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.quill",
    "patterns": [
        {
            "include": "#constants"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        }
    ],
    "repository": {
        "constants": {
            "comment": "decimal integers",
            "name": "constant.numeric.decimal.quill",
            "match": "\\b\\d[\\d_]*\\b"
        },
        "comments": {
            "patterns": [
                {
                    "comment": "line comments",
                    "name": "comment.line.double-slash.quill",
                    "match": "\\s*//.*"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "comment": "basic item-level keywords",
                    "name": "keyword.other.quill",
                    "match": "\\b(pub|def|data|enum|use)\\b"
                }
            ]
        }
    }
}
