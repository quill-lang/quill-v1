    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch quillc",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/quillc.exe",
            "args": [
                "{\"build_info\":{\"target_triple\":{\"arch\":\"X86_64\",\"vendor\":\"Pc\",\"os\":\"Windows\",\"env\":\"Gnu\"},\"code_folder\":\"\\\\\\\\?\\\\C:\\\\code\\\\quill-lang\\\\quill\\\\stdlib\\\\core\",\"build_folder\":\"\\\\\\\\?\\\\C:\\\\code\\\\quill-lang\\\\quill\\\\stdlib\\\\core\\\\build\",\"optimisation_type\":\"Debug\",\"emit_hir\":true,\"emit_mir\":true,\"emit_project_mir\":true,\"emit_unverified_llvm_ir\":true,\"emit_basic_llvm_ir\":true,\"emit_llvm_ir\":true,\"emit_asm\":true},\"zig_compiler\":\"zig\"}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(Linux) Launch quillc",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/quillc",
            "args": [
                "{\"build_info\":{\"target_triple\":{\"arch\":\"Wasm32\",\"vendor\":\"Unknown\",\"os\":\"Unknown\",\"env\":\"Wasi\"},\"code_folder\":\"stdlib/core\",\"build_folder\":\"stdlib/core/build\"},\"zig_compiler\":\"zig\"}"
            ],
        },
        {
            "name": "(Windows) Launch core",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/stdlib/core/build/core.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(Linux) Launch core",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/stdlib/core/build/core",
            "args": [],
        },
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Client",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "outFiles": [
                "${workspaceRoot}/quill_vscode/client/out/**/*.js"
            ],
            /*"preLaunchTask": {
                "type": "npm",
                "script": "watch"
            }*/
        },
        {
            "name": "Language Server E2E Test",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}/quill_vscode",
                "--extensionTestsPath=${workspaceRoot}/quill_vscode/client/out/test/index",
                "${workspaceRoot}/quill_vscode/client/testFixture"
            ],
            "outFiles": [
                "${workspaceRoot}/quill_vscode/client/out/test/**/*.js"
            ]
        }
    ]
}
